---
// Component Imports
import Main from "../../layouts/main.astro";
import Card from "../../components/Card.astro";

const res = await fetch(
  "https://wooqlaw.com/en-pk/api/LawyerSearchsListing/GetPaginatedItems?CountryId=1&CurrentIndex=1&RowsPerPage=10&UsePagination=True"
